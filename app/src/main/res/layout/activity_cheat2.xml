<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDCFCF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".cheatActivity2">


    <TextView
        android:id="@+id/tixtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="top"
        android:text="@string/cheater_is_wrog"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/qustion_of_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quistion"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cheat_aswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/answer"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#807F7F"
        android:gravity="center"
        android:text="@string/show_me" />

</LinearLayout>

